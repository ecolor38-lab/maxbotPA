# Telegram Bot API Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_channel_id_here

# OpenAI API Configuration (опционально, для генерации текста)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration (для генерации текста и промптов)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Scheduler Configuration
# 3 раза в день по Иркутскому времени (GMT+8): 9:00, 14:00, 19:00
CRON_SCHEDULE_1=0 9 * * *   # Утренний пост (9:00 Иркутск)
CRON_SCHEDULE_2=0 14 * * *  # Дневной пост (14:00 Иркутск)
CRON_SCHEDULE_3=0 19 * * *  # Вечерний пост (19:00 Иркутск)
TIMEZONE=Asia/Irkutsk        # Иркутское время (GMT+8)

# Search Configuration
SEARCH_DAYS_BACK=7  # Искать новости за последние N дней
MAX_NEWS_ITEMS=5    # Максимальное количество новостей для обработки

# Language Settings
LANGUAGE=ru  # Язык постов: ru, en
